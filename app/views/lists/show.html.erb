<div class="banner banner-list">
    <div class="container">
      <h1><%= @list.name %></h1>
    </div>
</div>

<div class="show">
  <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-flat btn-position" %>
  <ul>
    <div class="list-items">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-movie">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <div class="card-movie-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.comment %></p>
            </div>
            <%= link_to "Delete",
              bookmark_path(bookmark),
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:'card-movie-btn'
            %>
          </div>
        </div>
      <% end %>
    </div>
  </ul>
</div>
